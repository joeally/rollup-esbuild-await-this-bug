{
  "compilerOptions": {
    "declaration": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "downlevelIteration": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
  ]
}
